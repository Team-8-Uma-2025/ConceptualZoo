{
    "version": 2,
    "buildCommand": "cd frontend && CI=false npm run build && cd ../backend && npm install",
    "outputDirectory": "frontend/build",
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/server.js"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }